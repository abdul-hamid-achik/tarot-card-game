{
  "name": "tarot-card-game",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "compose:up": "dotenv -- docker compose up -d",
    "build": "npm run -w @tarot/game-logger build && npm run -w @tarot/game-sim build && npm run -w @tarot/db build && npm run -w @tarot/ws-stub build && npm run -w @tarot/web build && npm run -w @tarot/docs build",
    "test": "npm run -w @tarot/game-sim test && echo 'Run web E2E locally with: npm run -w @tarot/web dev & npx -w @tarot/web playwright test'",
    "dev": "dotenv -- npm run -w @tarot/web dev",
    "docs": "dotenv -- npm run -w @tarot/docs dev",
    "db:generate": "dotenv -- drizzle-kit generate",
    "db:push": "dotenv -- drizzle-kit push",
    "db:studio": "dotenv -- drizzle-kit studio",
    "db:seed": "dotenv -- tsx packages/db/seed.ts",
    "test:watch": "npm run -w @tarot/game-sim test:watch",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier --write .",
    "e2e:web": "npx -w @tarot/web playwright test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "@stackframe/stack": "2.4.8",
    "@xstate/react": "^6.0.0",
    "drizzle-orm": "^0.44.4",
    "xstate": "^5.20.2"
  }
}
